<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$(PropsRoot)\Test.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net452;net46;netcoreapp2.1;netcoreapp3.1;net5.0</TargetFrameworks>
