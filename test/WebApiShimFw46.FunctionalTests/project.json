{
    "webroot": "wwwroot",
    "version": "1.0.0-beta8-*",

    "dependencies": {
        "FunctionalTestUtils": "1.0.0-rc1-*",
        "Microsoft.ApplicationInsights.AspNet": "1.0.0-rc1",
        "Microsoft.AspNet.Mvc": "6.0.0-rc1-*",
        "Microsoft.AspNet.Mvc.WebApiCompatShim": "6.0.0-rc1-*",
        "Microsoft.AspNet.Server.WebListener": "1.0.0-rc1-*",
        "Microsoft.AspNet.StaticFiles": "1.0.0-rc1-*",
        "Microsoft.AspNet.WebApi.Client": "5.2.0",
        "Microsoft.Extensions.Configuration.Json": "1.0.0-rc1-*",
        "xunit.runner.aspnet": "2.0.0-aspnet-rc1-*"
    },

    "commands": {
        "web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:5000",
        "test": "xunit.runner.aspnet"
    },

    "frameworks": {
        "dnx451": { },
        "dnxcore50": { }
    },

    "exclude": [
        "wwwroot",
        "node_modules",
        "bower_components"
    ],
    "publishExclude": [
        "node_modules",
        "bower_components",
        "**.xproj",
        "**.user",
        "**.vspscc"
    ]
}
